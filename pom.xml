<!--                        <source>${project.basedir}/src/main/resources/xsd/root.xsd</source>-->
<!--                        <source>${project.basedir}/src/main/resources/xsd/soap-envelope.xsd</source>-->
                        <!-- Login CMS Fault -->
<!--                        <source>${project.basedir}/src/main/resources/xsd/fault/SoapEnvelope.xsd</source>-->
<!--                        <source>${project.basedir}/src/main/resources/fault/xsd/SoapBody.xsd</source>-->
<!--                        <source>${project.basedir}/src/main/resources/fault/xsd/SoapFault.xsd</source>-->
<!--                        <source>${project.basedir}/src/main/resources/fault/xsd/FaultDetailNoes.xsd</source>-->

<!--                        <source>${project.basedir}/src/main/resources/xsd/fault_ok/schema1.xsd</source>-->
<!--                        <source>${project.basedir}/src/main/resources/xsd/fault_ok/schema2.xsd</source>-->
<!--                        <source>${project.basedir}/src/main/resources/xsd/fault_ok/schema3.xsd</source>-->


                        <!-- jaxb2 no permite procesar directamente un WSDL desde una URL -->
                        <!-- tienes que generar manualmente los .xsd o .wsdl en resources/wsdl -->
                        <!-- <source>https://wsaahomo.afip.gov.ar/ws/services/LoginCms?WSDL</source> -->
                    </sources>
                    <xjbSources>
<!--                        <xjbSource>${project.basedir}/src/main/resources/prueba/episode_default-cli.xjb</xjbSource>-->
<!--                        <xjbSource>${project.basedir}/target/generated-resources/schemagen/META-INF/JAXB/episode_default-cli.xjb</xjbSource>-->
<!--                        <xjbSource>${project.basedir}/src/main/resources/xjb/episode_default-cli.xjb</xjbSource>-->

                        <!--                        <xjbSource>${project.basedir}/src/main/resources/xjb/bindings.xjb</xjbSource>-->
<!--                        <xjbSource>${project.basedir}/src/main/resources/xjb/person-bindings.xjb</xjbSource>-->
                    </xjbSources>
                    <!-- Especifica solo el archivo principal a procesar -->
                    <sourceType>wsdl</sourceType>
                    <createJavaDocAnnotations>true</createJavaDocAnnotations>

                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
